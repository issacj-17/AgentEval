#!/bin/bash

# Custom pre-commit hook for AgentEval
# This hook runs additional checks before allowing commits

set -e

echo "🔍 Running pre-commit checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Function to print colored output
print_status() {
    if [ $1 -eq 0 ]; then
        echo -e "${GREEN}✓ $2${NC}"
    else
        echo -e "${RED}✗ $2${NC}"
        return 1
    fi
}

# Check if we're in a virtual environment
if [ -z "$VIRTUAL_ENV" ]; then
    echo -e "${YELLOW}⚠ Warning: Not in a virtual environment${NC}"
fi

# Run ruff formatting check
echo "Running code formatting check..."
ruff format --check src tests 2>/dev/null
print_status $? "Code formatting (ruff)"

# Run ruff linting
echo "Running linting and security checks..."
ruff check src tests 2>/dev/null
print_status $? "Linting (ruff)"

# Run mypy
echo "Running type checking..."
mypy src 2>/dev/null
print_status $? "Type checking (mypy)"

# Run markdown formatting check
echo "Running markdown formatting check..."
mdformat --check *.md 2>/dev/null
print_status $? "Markdown formatting (mdformat)"

# Run unit tests
echo "Running unit tests..."
pytest tests/unit -v --tb=short -q 2>/dev/null
print_status $? "Unit tests"

echo -e "${GREEN}✓ All pre-commit checks passed!${NC}"
exit 0
